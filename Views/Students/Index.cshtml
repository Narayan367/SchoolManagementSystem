@model List<Student>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">
            <i class="fa-solid fa-user-graduate"></i> Student List
        </h2>
        <a class="btn btn-primary" asp-controller="Students" asp-action="Create">
            <i class="fa-solid fa-plus"></i> New Student
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Date of Birth</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Address</td>
                            <td>@student.DateOfBirth.ToShortDateString()</td>
                            <td>@student.Email</td>
                            <td>@student.ContactNumber</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-success btn-sm me-2">
                                    <i class="fa-solid fa-pen-to-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-trash-can"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No students found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
